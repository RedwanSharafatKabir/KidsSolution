<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppAction.SplashScreen"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/splashImageID"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/kidssolutionlogo"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/linearLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">

                <Button
                    android:id="@+id/signInTcPageID"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/customize_login_signup_background"
                    android:text="Login as Teacher"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:onClick="signInAsTcMethod"
                    android:clickable="false"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/signInGdPageID"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_homescreen_register"
                    android:text="Login as Guardian"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:onClick="signInAsGdMethod"
                    android:paddingRight="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="new here ?"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/signUpPageID"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/register"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:onClick="registerPageMethod"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
