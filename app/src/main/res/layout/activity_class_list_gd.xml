<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassDetails.ClassListActivityGd"
    android:orientation="vertical"
    android:background="#F4F4F4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/classroom"
            android:scaleType="fitXY"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/backFromClassesPageGdId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center|start"
            android:layout_margin="15dp"
            android:background="@drawable/customize_login_signup_background"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:padding="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/joinNewClassBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/create_class_design"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join a class"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_gravity="center" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/classesRecyclerViewGdId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />

        <TextView
            android:id="@+id/noClassIdGd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No classes to join"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#000"
            android:layout_margin="20dp"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/classesListProgressbarGdId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
